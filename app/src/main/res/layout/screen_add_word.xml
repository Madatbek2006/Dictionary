<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/spase"
        android:orientation="vertical"
        android:background="@drawable/bg_top3"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eng_conteyner"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/spase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:boxStrokeColor="@color/black"
        app:cursorColor="#4a7d74"
        app:endIconMode="clear_text"
        app:hintTextColor="#4a7d74">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/eng_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:textColorHint="#7C7C7C"
            android:hint="English"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/uzb_conteyner"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/eng_conteyner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:boxStrokeColor="@color/black"
        app:cursorColor="#4a7d74"
        app:endIconMode="clear_text"
        app:hintTextColor="#4a7d74">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/uzb_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:textColorHint="#7C7C7C"
            android:hint="Uzbek"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/type_conteyner"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/uzb_conteyner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="type"
            android:textColorHint="#7C7C7C"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>
    <CheckBox
        android:checked="true"
        android:id="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@id/type_conteyner"
        app:layout_constraintLeft_toLeftOf="@id/type_conteyner"
        android:layout_margin="24dp"
        android:layout_width="16dp"
        android:layout_height="16dp"/>
    <TextView
        app:layout_constraintLeft_toRightOf="@id/checkBox"
        app:layout_constraintTop_toTopOf="@id/checkBox"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/checkBox"
        android:text="Add to favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/add_word"
        android:layout_marginHorizontal="64dp"
        app:cardBackgroundColor="@color/color2"
        app:layout_constraintTop_toBottomOf="@id/checkBox"
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_height="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Add Word"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>