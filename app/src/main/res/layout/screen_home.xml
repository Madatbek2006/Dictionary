<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.dictionary.presenter.screen.main.MainScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/background1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/color1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/transfer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/transfer"
            android:backgroundTint="@color/white"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@id/background1"
            app:layout_constraintRight_toRightOf="@id/background1"
            app:layout_constraintTop_toTopOf="@id/background1" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/menu"
            android:backgroundTint="@color/white"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@id/background1"
            app:layout_constraintLeft_toLeftOf="@id/background1"
            app:layout_constraintTop_toTopOf="@id/background1" />

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dictionary"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/background1"
            app:layout_constraintLeft_toLeftOf="@id/background1"
            app:layout_constraintRight_toRightOf="@id/background1"
            app:layout_constraintTop_toTopOf="@id/background1" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/background1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white">


            <FrameLayout
                android:id="@+id/background2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white">
                <FrameLayout
                    android:background="@drawable/bg_search"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <EditText
                        android:id="@+id/search"
                        android:layout_marginHorizontal="16dp"
                        android:layout_gravity="center|start"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:hint="search"
                        android:textSize="18dp"
                        android:textColorHint="#5A5959"
                        android:layout_width="match_parent"
                        android:background="#FDFBFB"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/searchButton"
                        android:clickable="true"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="8dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/search"
                        android:backgroundTint="@color/color1"/>
                </FrameLayout>
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                app:layout_constraintTop_toBottomOf="@id/background2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <ImageView
                android:id="@+id/not_found"
                app:layout_constraintTop_toTopOf="@id/recyclerView"
                app:layout_constraintLeft_toLeftOf="@id/recyclerView"
                app:layout_constraintRight_toRightOf="@id/recyclerView"
                app:layout_constraintBottom_toBottomOf="@id/recyclerView"
                android:layout_marginBottom="32dp"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:background="@drawable/not_found"/>
            <View
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/menu_dictionary" />

</androidx.drawerlayout.widget.DrawerLayout>